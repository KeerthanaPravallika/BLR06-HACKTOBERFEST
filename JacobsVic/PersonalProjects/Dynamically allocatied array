arr = (int *) malloc(2*size);

for(n=0;n<size;n++)
  {printf("Enter the element no. %d: ",n+1);
   scanf("%d",&arr[n]);
  }
for(n=0;n<size;n++)
 {
  printf("Element no. %d is :",arr[n]);
 }
